<div class="container">
<div class="table-responsive"> 
<p id="notice"><%= notice %></p>
<h1> Categorias</h1>
 <% if  current_user.role == "jefe" or current_user.role == "admin"%>
<%= link_to 'Agregar Categoria', new_category_path , :class => "btn btn-primary" %>
 <% end %>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cod</th>
      <th>Sector</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nombre %></td>
        <td><%= category.cod %></td>
        <td><%= category.sector.nombre %></td>
        <!--<td><%= link_to 'Show', category %></td> -->
         <% if  current_user.role == "jefe" %>
        <td><%= link_to 'Editar', edit_category_path(category) ,:class=>"btn btn-warning"%>
         <% end %>
        <% if  current_user.role == "admin" %>
        <td><%= link_to 'Editar', edit_category_path(category) ,:class=>"btn btn-warning"%>
        <%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Desea elminar esta categoria ?' } ,:class=>"btn btn-danger"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
